{% extends 'base.html.twig' %}

{% block title %}Détail Stagiaire: {{ student }}{% endblock %}

{% block body %}
<h1>Fiche stagiaire</h1> 

<p>{{ student }}</p>
<p>{{ student.dateBirth|date("m/d/Y") }} ({{ student.age }} ans)</p>
<p>{{ student.tel }}</p>
<p>{{ student.email }}</p>

{% for session in student.sessions %}
    <a href="{{ path('show_session', {'id': session.id}) }}">{{ session.name }}</a><br>
{% endfor %}

<button>
    <a href="{{ path('edit_student', {'id': student.id}) }}">MODIFIER</a>
</button>

<button>
    <a href="{{ path('delete_student', {'id': student.id}) }}">SUPPRIMER</a>
</button>

<button>
    <a href="{{ path('app_student') }}">Retour à la liste</a>
</button>
{% endblock %}
